{
  "name": "full-osint-framework",
  "version": "2.0.0",
  "description": "Framework OSINT modulaire complet - Intelligence gathering et analyse multi-sources",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "start:gateway": "node core/api/gateway.js",
    "start:telegram": "node services/telegram/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --fix --ignore-path .gitignore",
    "setup": "node scripts/setup.js",
    "check-config": "node scripts/check-config.js",
    "check-services": "node scripts/check-services.js",
    "docker:build": "docker build -t full-osint-framework .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "install:all": "npm install && npm run install:frontend",
    "install:frontend": "cd frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "dev:frontend": "cd frontend && npm run dev",
    "clean": "rm -rf node_modules && npm install",
    "clean:all": "npm run clean && cd frontend && rm -rf node_modules && npm install",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "health": "curl -s http://localhost:3000/health | jq",
    "services": "curl -s http://localhost:3000/info | jq",
    "backup": "node scripts/backup.js",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "osint",
    "intelligence",
    "investigation",
    "telegram",
    "social-media",
    "web-intelligence",
    "framework",
    "microservices",
    "api",
    "search",
    "analysis",
    "automation",
    "security",
    "reconnaissance"
  ],
  "author": "OSINT Framework Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.0",
    "compromise": "^14.10.0",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^21.11.0",
    "redis": "^4.6.10",
    "sentiment": "^5.0.2",
    "sharp": "^0.32.6",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/full-osint-framework.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/full-osint-framework/issues"
  },
  "homepage": "https://github.com/your-username/full-osint-framework#readme",
  "config": {
    "framework": {
      "version": "2.0.0",
      "services": {
        "telegram": {
          "enabled": true,
          "required": false
        },
        "socialMedia": {
          "enabled": false,
          "required": false
        },
        "webIntel": {
          "enabled": false,
          "required": false
        },
        "imageIntel": {
          "enabled": false,
          "required": false
        }
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "app.js",
      "core/",
      "services/",
      "orchestrator/"
    ],
    "ext": "js,json",
    "ignore": [
      "logs/",
      "node_modules/",
      "frontend/",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "core/**/*.js",
      "services/**/*.js",
      "orchestrator/**/*.js",
      "!**/node_modules/**",
      "!**/logs/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "consistent-return": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}